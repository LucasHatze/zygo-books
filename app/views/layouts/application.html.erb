<!DOCTYPE html>
<html>
  <head>
    <title>ZygoBooks</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-light">
        <div class='d-flex justify-content-between w-100'>
          <%= link_to root_path do %>
            <span class="navbar-brand mb-0 h1">Zygo Books</span>
          <% end %>

          <% if user_signed_in? %>
            <%= link_to 'Sair', destroy_user_session_path, data: { turbo: false, method: :delete }, class: 'link' %>
          <% else %>
            <%= button_to 'Entrar', new_user_session_path, class: 'btn btn-link', data: { turbo: false, method: :get } %>
          <% end %>
        </div>
        
    </nav>
    
    <div class='container'>
      <%= yield %>
    </div>
  </body>
</html>
